<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.finalproject.mapper.PayMapper">

    <insert id="insert">
        <selectKey keyProperty="id" resultType="int" order="BEFORE">
            SELECT seq_pay.nextval FROM DUAL
        </selectKey>
        INSERT into pay
        VALUES (#{id},#{cardNumber}, #{cardExpiration}, #{cardPassword}, #{birth}, #{totalPrice})
    </insert>

    <select id="getById" resultType="com.example.finalproject.domain.Pay">
        select * from pay where id=#{id}
    </select>

</mapper>
